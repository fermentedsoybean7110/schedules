%h2.header 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .regform
    .regfields
      .regfield
        .regfield__label
          = f.label :name, "名前(6文字以内)", class: "reg-name-label"
        .regfield__text
          = f.text_field :name, autofocus: true, autocomplete: "name", class: "reg-name-field"
      .regfield
        .regfield__label
          = f.label :email, "Eメール", class: "reg-email-label"
        .regfield__text
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "reg-email-field"
      .regfield
        .regfield__label
          = f.label :password, "パスワード(6文字以上)", class: "reg-pass-label"
        .regfield__text
          = f.password_field :password, autocomplete: "new-password", class: "reg-pass-field"
      .regfield
        .regfield__label
          = f.label :password_confirmation, "パスワード(確認用)", class: "reg-pass-conf-label"
        .regfield__text
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "reg-pass-conf-field"
    .actions
      = f.submit "登録", class: "login-reg"
.link
  既にアカウントがある方はこちら
  = link_to "ログイン", new_user_session_path
